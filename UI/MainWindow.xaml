<Window x:Class="UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>            
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <ListBox Name="Original">
            
        </ListBox>
        <ListBox Name="Translated" Grid.Column="1">
            
        </ListBox>
        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal">
            <Button Width="50" Margin="6" Click="Button_Click">Add</Button>
            <TextBox Name="InputBox"  HorizontalContentAlignment="Stretch" MinWidth="425" Margin="6" FontSize="18" FontFamily="Broadway"></TextBox>
        </StackPanel>
    </Grid>
</Window>
